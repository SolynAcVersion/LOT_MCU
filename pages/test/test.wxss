/* pages/test/test.wxss */
.container {
  padding: 30rpx;
}

.header {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.section {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.value {
  display: block;
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
  font-family: monospace;
}

.result {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  white-space: pre-line;
}

.success {
  color: #07c160;
}

.failed {
  color: #fa5151;
}

.test-btn {
  margin-top: 30rpx;
  background: #07c160;
  color: white;
}

.info {
  margin-top: 60rpx;
  padding: 20rpx;
  background: #fffbe6;
  border-radius: 10rpx;
  border: 1px solid #ffd690;
}

.info-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #ed6a0c;
  margin-bottom: 10rpx;
}

.info-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}
